= form_for @event, :html => { :class => "form-horizontal" } do |f|
  -if @event.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"

      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :state, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :state, :class => 'form-control'
  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :description, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :start_at, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :start_at, :class => 'form-control'
  .form-group
    = f.label :invite_from, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invite_from, :class => 'form-control'
  .form-group
    = f.label :invite_to, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invite_to, :class => 'form-control'
  .form-group
    = f.label :attendees_min_count, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :attendees_min_count, :class => 'form-control'
  .form-group
    = f.label :attendees_max_count, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :attendees_max_count, :class => 'form-control'
  .form-group
    = f.label :minutes_for_answer, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :minutes_for_answer, :class => 'form-control'
  .form-group
    = f.label :public_attendees_list, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.check_box :public_attendees_list, :class => 'form-control'
  .form-group
    = f.label :creator_id, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :creator_id, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
