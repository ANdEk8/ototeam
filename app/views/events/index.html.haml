.page-header
  = link_to new_event_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Event
  %h1 Listing events

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th State
        %th Name
        %th Description
        %th Start at
        %th Invite from
        %th Invite to
        %th Attendees min count
        %th Attendees max count
        %th Minutes for answer
        %th Public attendees list
        %th Creator
        %th
        %th
        %th

    %tbody
      = render @events
